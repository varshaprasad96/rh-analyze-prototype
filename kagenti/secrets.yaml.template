# Kagenti Secrets Configuration
# Copy this file to secrets.yaml and fill in your values
#
# IMPORTANT: Never commit secrets.yaml to version control!
# Add secrets.yaml to .gitignore

secrets:
  # Your public GitHub User ID
  # Required for image registry access
  githubUser: ""
  
  # Your personal GitHub Token
  # Required only if using ghcr.io as registry for builds
  # Scopes needed: repo(all), read/write packages
  githubToken: ""
  
  # OpenAI API Key
  # Required for OpenShift as Ollama not yet available
  openaiApiKey: ""
  
  # Slack Bot Token (optional)
  # Not required until auth is enabled and slack demo agent is used
  slackBotToken: ""
  
  # Admin Slack Bot Token (optional)
  # Not required until auth is enabled and slack demo agent is used
  adminSlackBotToken: ""
  
  # Quay.io credentials (optional)
  # Only required if using quay.io as registry to build and push images to
  quayUser: ""
  quayToken: ""

